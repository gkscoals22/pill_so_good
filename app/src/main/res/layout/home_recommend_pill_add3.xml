<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_horizon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/profileview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title1"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="비타민D" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hashtag1_1"
            android:textSize="17sp"
            android:textColor="#FF007F"
            android:text="#뼈와 치아 형성에 필요"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hashtag1_2"
            android:textSize="17sp"
            android:textColor="#FF007F"
            android:text="#골다공증 발생 위험 감소에 도움을 줌"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/text1"
            android:textColor="#000000"
            android:text="뼈를 튼튼하게 유지하기 위해서는 적당한 운동과 칼슘, 비타민 D와 같이 뼈 형성에 도움이 되는 영양성분을 충분히 섭취하는 것이 좋습니다. 뼈가 약해지는 경우 허리와 관절에 통증이 생길 수 있고 골다공증이 발생할 수 있으니 미리 대비하세요."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textlink1"
            android:textSize="17sp"
            android:linksClickable="true"
            android:autoLink="web"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title2"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:text="유산균" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hashtag2_1"
            android:textSize="17sp"
            android:textColor="#FF007F"
            android:text="#유산균 증식 및 유해균 억제"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hashtag2_2"
            android:textSize="17sp"
            android:textColor="#FF007F"
            android:text="#배변 활동 원활에도 도움을 줄 수 있음"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="인스턴트 음식이나 너무 기름진 형태의 식사, 다이어트로 인한 불규칙한 식습관으로 장내 유익균과 유해균의 밸런스가 무너질 수 있습니다. 유산균을 섭취하여 장내 미생물의 균형을 맞춰주면 장건강에 도움을 줄 수 있습니다."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textlink2"
            android:textSize="17sp"
            android:linksClickable="true"
            android:autoLink="web"
            android:textColor="#000000"
            />
    </LinearLayout>

</LinearLayout>